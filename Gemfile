source 'http://rubygems.org'
ruby '2.1.5'

# Gems removed from Rails 4, but added here for legacy support
gem 'rails-observers'
gem 'acts_as_list'
gem 'protected_attributes'

# Use jquery
gem 'jquery-rails'

# Use puma webserver
gem 'puma'

gem 'rails'
gem 'pg'
gem 'devise'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'

group :development, :test do
  gem 'rspec-rails'
  gem 'rspec-activemodel-mocks'
  gem 'taps'
end

group :test do
  gem 'timecop'
end
